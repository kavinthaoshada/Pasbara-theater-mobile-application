<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".AddMovieFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:padding="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/selectCarPhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/carImage"
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_photo_camera_50" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/dashboard_item_1" />

                        <EditText
                            android:id="@+id/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:hint="@string/movie_title"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Title"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Movie Duration"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp">

                            <LinearLayout
                                android:id="@+id/layoutHours"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_input"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_marginStart="10dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_duration"
                                    app:tint="@color/dashboard_item_1" />

                                <EditText
                                    android:id="@+id/textHours"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:background="@null"
                                    android:hint="Hours"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/primary_text"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="41dp"
                                android:background="@color/white"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:text="Hours"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/layoutHours"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/layoutHours" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp">

                            <LinearLayout
                                android:id="@+id/layoutMinutes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/background_input"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_marginStart="10dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_duration"
                                    app:tint="@color/dashboard_item_1" />

                                <EditText
                                    android:id="@+id/textMinutes"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:background="@null"
                                    android:hint="Minutes"
                                    android:imeOptions="actionNext"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/primary_text"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="41dp"
                                android:background="@color/white"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:text="Minutes"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/layoutMinutes"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/layoutMinutes" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_release_date"
                            app:tint="@color/dashboard_item_1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/datePickerButton"
                            style="?android:spinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingStart="10dp"
                            android:text="Pick Date"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Release Date"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutReleaseDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutReleaseDate" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/dashboard_item_1" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:columnCount="2">

                            <CheckBox
                                android:id="@+id/checkboxAction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Action" />

                            <CheckBox
                                android:id="@+id/checkboxAdventure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Adventure" />

                            <CheckBox
                                android:id="@+id/checkboxHorror"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Horror" />

                            <CheckBox
                                android:id="@+id/checkboxThriller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Thriller" />

                            <CheckBox
                                android:id="@+id/checkboxDrama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Drama" />

                            <CheckBox
                                android:id="@+id/checkboxOption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Family" />

                            <CheckBox
                                android:id="@+id/checkboxChildren"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Children" />

                            <CheckBox
                                android:id="@+id/checkboxAnimation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Animation" />


                        </GridLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Genre"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutGenre"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutGenre" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutCastAndCrew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_cast_and_crew"
                            app:tint="@color/dashboard_item_1" />

                        <EditText
                            android:id="@+id/textCastAndCrew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Cast and Crew"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="5"
                            android:maxLines="5"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="@string/cast_crew"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutCastAndCrew"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutCastAndCrew" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_description"
                            app:tint="@color/dashboard_item_1" />

                        <EditText
                            android:id="@+id/textDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Description"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="5"
                            android:maxLines="5"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="@string/description"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutTrailer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/dashboard_item_1" />

                        <EditText
                            android:id="@+id/textTrailer"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:hint="@string/url_of_movie_trailer"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Trailer"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutTrailer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutTrailer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutShowtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_release_date"
                            app:tint="@color/dashboard_item_1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/dateAndTimePickerButton"
                            style="?android:spinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingStart="10dp"
                            android:text="Pick Date And Time"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Showtime"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutShowtime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutShowtime" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutShowtimeList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_release_date"
                            app:tint="@color/secondary_text" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never">

                            <LinearLayout
                                android:id="@+id/dateTimeList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Showtime List"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutShowtimeList"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutShowtimeList" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutScreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_screen"
                            app:tint="@color/dashboard_item_1" />

                        <Spinner
                            android:id="@+id/spinnerScreen"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:entries="@array/screen_dropdown_items" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Screen"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutScreen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutScreen" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:id="@+id/layoutPricing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/dashboard_item_1" />

                        <EditText
                            android:id="@+id/textPricing"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:hint="@string/pricing_per_seat"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="41dp"
                        android:background="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Pricing"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutPricing"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutPricing" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btnAddMovie"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_button"
                    android:text="Add Movie"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>